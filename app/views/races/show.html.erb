<%- model_class = Race -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:position) %>:</strong></dt>
  <dd><%= @race.position %></dd>
  <dt><strong><%= model_class.human_attribute_name(:election_id) %>:</strong></dt>
  <dd><%= @race.election.name %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              election_path(@election), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_election_race_path(@election, @race), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              election_race_path(@election, @race),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
