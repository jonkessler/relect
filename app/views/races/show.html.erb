<%- model_class = Race -%>
<div class="page-header">
  <h1><%= @race.position %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:election_id) %>:</strong></dt>
  <dd><%= @race.election.name %></dd>
  <dt><strong>Candidates</strong></dt>
  <dd>
    <% if (candidates = @race.candidates.order(:name)).present?  %>
      <% candidates.each do |candidate| %>
        <p><%= candidate.name %></p>
      <% end -%>
    <% else %>
      <p>None</p>
    <% end -%>
  </dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              election_path(@election), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_election_race_path(@election, @race), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              election_race_path(@election, @race),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
