<%- model_class = Election -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th>Races</th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @elections.sort_by(&:name).each do |election| %>
      <tr>
        <td><%= link_to election.name, election_path(election) %></td>
        <td>
          <% election.races.each do |race| %>
            <%= link_to race.position, election_race_path(election, race) %><br/>
            <% end -%>
            <%= link_to 'Add Race', new_election_race_path(election) %>
        </td>
        <td><%=l election.created_at %></td>
        <td>
          <%= link_to 'Cast Ballot',
                      new_election_ballot_path(election),
                      :class => 'btn btn-mini btn-primary' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_election_path(election), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      election_path(election),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_election_path,
            :class => 'btn btn-primary' %>
